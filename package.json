  "license": "MIT",
  "workspaces": [
    "ui-color-palette",
    "ideas-spark-booth",
    "packages/auth-yelbolt-worker"
  ],
  "scripts": {
    "uicp": "npm run dev:uicp& npm run dev:wrk",
    "dev:uicp": "npm run dev -w ui-color-palette",
    "build:uicp": "npm run build -w ui-color-palette",
    "start:uicp": "npm run start -w ui-color-palette",
    "lint:uicp": "npm run lint -w ui-color-palette",
    "patch:uicp": "npm version patch -w ui-color-palette",
