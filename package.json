    "format:uicp": "npm run format -w ui-color-palette",
    "install:uicp": "npm install -w ui-color-palette",
    "isb": "npm run dev:isb & npm run dev:wrk",
    "dev:isb": "npm run dev -w ideas-spark-booth",
    "build:isb": "npm run build -w ideas-spark-booth",
    "start:isb": "npm run start -w ideas-spark-booth",
    "lint:isb": "npm run lint -w ideas-spark-booth",
    "patch:isb": "npm version patch -w ideas-spark-booth",
    "minor:isb": "npm version minor -w ideas-spark-booth",
    "major:isb": "npm version major -w ideas-spark-booth",
    "format:isb": "npm run format -w ideas-spark-booth",
    "install:isb": "npm install -w ideas-spark-booth",
    "dev:wrk": "npm run start:8787 -w auth-yelbolt-worker",
    "stop": "pkill -f 'node'"
